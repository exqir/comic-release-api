{
  "name": "comic-app",
  "version": "0.0.1",
  "description": "this app helps you keeping track of your comic book subscriptions",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "npm run build && concurrently \"npm run build:dev\" \"npm run start:dev\" --kill-others",
    "start:dev": "nodemon --watch dist",
    "build:dev": "tsc -w",
    "build": "tsc",
    "test:functional": "jest",
    "format": "prettier --write 'src/**/*.ts'",
    "postinstall": "npm link 'mongad'",
    "start": "babel index.js",
    "pretest": "npm run test:server",
    "test": "mocha -r babel-polyfill  --compilers js:babel-core/register --colors ./test/index.js",
    "posttest": "pkill -f http-server",
    "test:server": "http-server ./test/assets -a localhost -p 3001 -s &",
    "test:specs": "mocha -R spec --require babel-polyfill --compilers js:babel-core/register lib/**/*.spec.js",
    "docker:dev": "docker-compose up",
    "docker:test": "docker-compose -f docker-compose.test.yml up",
    "docker:mongo": "docker exec -ti comicreleaseapi_mongo_1 mongo",
    "docker:bash": "docker exec -ti comicreleaseapi_web_1 bash"
  },
  "author": "Malte Sellmer",
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^2.0.6",
    "bcrypt": "^3.0.0",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "fp-ts": "^1.14.4",
    "graphql": "^14.0.2",
    "graphql-tools": "^3.1.1",
    "mongodb": "^3.2.3",
    "mongoose": "^5.2.13",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "ramda": "^0.25.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/express-session": "^1.15.11",
    "@types/jest": "^23.3.2",
    "@types/mongodb": "^3.1.23",
    "@types/mongoose": "^5.2.11",
    "@types/passport": "^0.4.6",
    "@types/passport-local": "^1.0.33",
    "@types/ramda": "^0.25.39",
    "@types/supertest": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "concurrently": "^4.0.1",
    "eslint": "^5.6.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "jest": "^23.6.0",
    "mongodb-memory-server": "^4.2.2",
    "nodemon": "^1.18.4",
    "prettier": "^1.17.1",
    "supertest": "^3.3.0",
    "ts-jest": "^23.1.4",
    "typescript": "^3.5.2"
  }
}