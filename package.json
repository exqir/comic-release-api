{
  "name": "comic-app",
  "version": "0.0.1",
  "description": "this app helps you keeping track of your comic book subscriptions",
  "main": "index.js",
  "scripts": {
    "start": "babel index.js",
    "dev": "nodemon --watch lib index.js --exec babel-node",
    "pretest": "npm run test:server",
    "test": "mocha -r babel-polyfill  --compilers js:babel-core/register --colors ./test/index.js",
    "posttest": "pkill -f http-server",
    "test:server": "http-server ./test/assets -a localhost -p 3001 &",
    "test:specs": "mocha -R spec --require babel-polyfill --compilers js:babel-core/register lib/**/*.spec.js",
    "docker:dev": "docker-compose up",
    "docker:test": "docker-compose -f docker-compose.test.yml up",
    "docker:mongo": "docker exec -ti comicreleaseapi_mongo_1 mongo",
    "docker:bash": "docker exec -ti comicreleaseapi_web_1 bash"
  },
  "author": "Malte Sellmer",
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^1.4.0",
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.3",
    "dateformat": "^2.0.0",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "graphql": "^0.11.7",
    "graphql-iso-date": "^3.3.0",
    "graphql-tools": "^2.24.0",
    "mongoose": "^5.2.4",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "scrape-it": "^5.0.5"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "http-server": "^0.10.0",
    "mocha": "^3.2.0",
    "nodemon": "^1.18.3",
    "supertest": "^3.1.0",
    "testdouble": "^3.8.1"
  }
}
