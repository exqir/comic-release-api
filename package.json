{
  "name": "comic-app",
  "version": "0.0.1",
  "description": "this app helps you keeping track of your comic book subscriptions",
  "main": "index.js",
  "scripts": {
    "start": "env DB_SERVER=localhost env DB=comic-app babel index.js",
    "dev": "env DB_SERVER=mongo env DB=dev ./node_modules/.bin/nodemon --watch lib index.js --exec babel-node",
    "pretest": "npm run test:server",
    "test": "env MUTE_CLI_LOG=true DB_SERVER=mongo env DB=test ./node_modules/.bin/mocha --require babel-polyfill --compilers js:babel-core/register --colors ./test/index.js",
    "posttest": "pkill -f http-server",
    "test:server": "./node_modules/.bin/http-server ./test/assets -a localhost -p 3001 &",
    "test:specs": "./node_modules/.bin/mocha -R spec --require babel-polyfill --compilers js:babel-core/register lib/**/*.spec.js",
    "docker:up": "env MODE=start docker-compose up",
    "docker:dev": "env MODE=dev docker-compose up",
    "docker:test": "env MODE=test docker-compose up",
    "docker:mongo": "docker exec -ti comicreleaseapi_mongo_1 mongo",
    "docker:bash": "docker exec -ti comicreleaseapi_web_1 bash",
    "docker:test:build": "docker build -f Dockerfile.test -t comicapp_test .",
    "docker:test:run": "env DHOST=docker.for.mac.host.internal docker run -e DHOST comicapp_test"
  },
  "author": "Malte Sellmer",
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^1.2.0",
    "body-parser": "^1.17.1",
    "dateformat": "^2.0.0",
    "express": "^4.14.1",
    "graphql": "^0.11.7",
    "graphql-iso-date": "^3.3.0",
    "graphql-tools": "^2.7.2",
    "mongoose": "^4.8.5",
    "scrape-it": "^5.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "http-server": "^0.10.0",
    "mocha": "^3.2.0",
    "nodemon": "^1.14.12",
    "supertest": "^3.0.0",
    "testdouble": "^3.5.0"
  }
}
