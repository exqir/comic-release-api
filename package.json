{
  "name": "comic-app",
  "version": "0.0.1",
  "description": "this app helps you keeping track of your comic book subscriptions",
  "main": "index.js",
  "scripts": {
    "start": "env DB_SERVER=localhost env DB=comic-app babel index.js",
    "dev": "env DB_SERVER=mongo env DB=dev nodemon --watch lib index.js --exec babel-node",
    "test": "export MUTE_CLI_LOG=true; ./node_modules/.bin/mocha ./test/index.js",
    "pretest": "npm run test:app && npm run test:server",
    "posttest": "pkill -f http-server",
    "test:app": "env DB_SERVER=mongo env DB=test babel index.js &",
    "test:server": "./node_modules/.bin/http-server ./test/assets -a localhost &",
    "docker:up": "env MODE=start docker-compose up",
    "docker:dev": "env MODE=dev docker-compose up",
    "docker:test": "env MODE=test docker-compose up",
    "docker:mongo": "docker exec -ti comicreleaseapi_mongo_1 mongo",
    "docker:bash": "docker exec -ti comicreleaseapi_web_1 bash"
  },
  "author": "Malte Sellmer",
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^1.2.0",
    "body-parser": "^1.17.1",
    "cheerio": "^0.22.0",
    "comic-scraper": "exqir/comic-scraper",
    "dateformat": "^2.0.0",
    "express": "^4.14.1",
    "graphql": "^0.11.7",
    "graphql-iso-date": "^3.3.0",
    "graphql-tools": "^2.7.2",
    "mongoose": "^4.8.5",
    "node-vibrant": "^3.0.0-alpha.2",
    "request": "^2.79.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "http-server": "^0.10.0",
    "mocha": "^3.2.0",
    "supertest": "^3.0.0"
  }
}
